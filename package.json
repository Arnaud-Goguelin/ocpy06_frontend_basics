{
    "name": "juststreamit",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "lint:html": "htmlhint index.html",
        "lint:css": "stylelint css/**/*.css",
        "lint:js": "eslint js/**/*.js",
        "lint": "pnpm lint:html && pnpm lint:css && pnpm lint:js"
    },
    "stylelint": {
        "extends": "stylelint-config-standard"
    },
    "htmlhint": {
        "tagname-lowercase": true,
        "attr-lowercase": true,
        "attr-value-double-quotes": true,
        "tag-pair": true,
        "id-unique": true,
        "alt-require": true
    }
}
